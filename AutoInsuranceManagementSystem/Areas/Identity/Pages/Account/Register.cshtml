@page
@model AutoInsuranceManagementSystem.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            padding: 20px;
            color: white;
            border-radius: 15px 15px 0 0;
            text-align: center;
        }

        .card-body {
            padding: 30px;
        }

        .form-label {
            font-weight: 500;
        }

        .form-control.rounded-pill {
            border-radius: 50px;
            padding: 10px 15px;
        }

        .input-group-text {
            background: none;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            border-radius: 50px;
            padding: 12px 20px;
            font-weight: 500;
        }

        .card-footer {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            color: white;
            padding: 15px;
            text-align: center;
        }
    </style>
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h1 class="h3 mb-0 fw-normal">Create a New Account</h1>
                <p>Join AutoInsurance Pro today!</p>
            </div>

            <div class="card-body">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.FullName" class="form-label"></label>
                            <input asp-for="Input.FullName" class="form-control rounded-pill" placeholder="Enter your full name" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control rounded-pill" placeholder="Enter your email" autocomplete="username" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control rounded-pill" placeholder="Enter your mobile number" autocomplete="tel" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Pincode" class="form-label"></label>
                            <input asp-for="Input.Pincode" class="form-control rounded-pill" placeholder="Enter your pincode" maxlength="6" />
                            <span asp-validation-for="Input.Pincode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.Password" type="password" class="form-control rounded-pill" autocomplete="new-password" placeholder="Create a password" />
                                <span class="input-group-text">
                                    <i class="fa fa-eye" id="togglePassword"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control rounded-pill" autocomplete="new-password" placeholder="Confirm password" />
                                <span class="input-group-text">
                                    <i class="fa fa-eye" id="toggleConfirmPassword"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill">Register</button>
                    </div>
                </form>
            </div>

            <div class="card-footer">
                <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-semibold text-white">Login here</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let togglePassword = document.getElementById("togglePassword");
            let passwordField = document.querySelector("input[name='Input.Password']");

            let toggleConfirmPassword = document.getElementById("toggleConfirmPassword");
            let confirmPasswordField = document.querySelector("input[name='Input.ConfirmPassword']");

            togglePassword.addEventListener("click", function () {
                passwordField.type = passwordField.type === "password" ? "text" : "password";
                this.classList.toggle("fa-eye-slash");
            });

            toggleConfirmPassword.addEventListener("click", function () {
                confirmPasswordField.type = confirmPasswordField.type === "password" ? "text" : "password";
                this.classList.toggle("fa-eye-slash");
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}