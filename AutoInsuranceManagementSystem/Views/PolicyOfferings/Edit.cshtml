@model AutoInsuranceManagementSystem.Models.PolicyOffering
@{
    ViewData["Title"] = "Edit Policy Offering";
}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        <div class="card shadow-sm rounded-3">
            <div class="card-header bg-primary text-white rounded-top-3">
                <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]: @Model.OfferingName</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>
                    <input type="hidden" asp-for="PolicyOfferingId" />
                    <div class="mb-3">
                        <label asp-for="OfferingName" class="form-label fw-semibold"></label>
                        <input asp-for="OfferingName" class="form-control rounded-pill" />
                        <span asp-validation-for="OfferingName" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="Description" class="form-control rounded-3" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CoverageType" class="form-label fw-semibold"></label>
                        <input asp-for="CoverageType" class="form-control rounded-pill" />
                        <span asp-validation-for="CoverageType" class="text-danger small"></span>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="CoverageAmount" class="form-label fw-semibold"></label>
                            <div class="input-group"><span class="input-group-text rounded-start-pill">₹</span><input asp-for="CoverageAmount" type="number" step="0.01" class="form-control rounded-end-pill" /></div>
                            <span asp-validation-for="CoverageAmount" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PremiumAmount" class="form-label fw-semibold"></label>
                            <div class="input-group"><span class="input-group-text rounded-start-pill">₹</span><input asp-for="PremiumAmount" type="number" step="0.01" class="form-control rounded-end-pill" /></div>
                            <span asp-validation-for="PremiumAmount" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DurationInMonths" class="form-label fw-semibold"></label>
                        <input asp-for="DurationInMonths" type="number" class="form-control rounded-pill" />
                        <span asp-validation-for="DurationInMonths" class="text-danger small"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive">
                        <label class="form-check-label fw-semibold" asp-for="IsActive"></label>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="submit" class="btn btn-success rounded-pill px-4"><i class="bi bi-save-fill me-2"></i>Save Changes</button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4"><i class="bi bi-arrow-left-circle-fill me-2"></i>Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}