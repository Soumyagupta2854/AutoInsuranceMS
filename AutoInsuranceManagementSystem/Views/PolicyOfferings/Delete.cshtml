@model AutoInsuranceManagementSystem.Models.PolicyOffering
@{
    ViewData["Title"] = "Delete Policy Offering";
}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        <div class="card shadow-sm rounded-3 border-danger">
            <div class="card-header bg-danger text-white rounded-top-3">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewData["Title"]</h4>
            </div>
            <div class="card-body p-4">
                <h5 class="card-title">Are you sure you want to delete offering "@Model.OfferingName"?</h5>
                <p class="text-muted">If any customer policies are based on this offering, deletion might be prevented. Consider deactivating it instead.</p>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.OfferingName)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.OfferingName)</dd>
                    <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.CoverageType)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CoverageType)</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="PolicyOfferingId" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="submit" class="btn btn-danger rounded-pill px-4"><i class="bi bi-trash3-fill me-2"></i>Delete Offering</button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4"><i class="bi bi-x-circle-fill me-2"></i>Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>