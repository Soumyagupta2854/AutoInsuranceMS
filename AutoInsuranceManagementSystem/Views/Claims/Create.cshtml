@model AutoInsuranceManagementSystem.ViewModels.ClaimCreateViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Submit New Claim";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        <div class="card shadow-sm rounded-3">
            <div class="card-header @(User.IsInRole("Admin") ? "bg-primary" : "bg-success") text-white rounded-top-3">
                <h4 class="mb-0"><i class="bi bi-shield-exclamation me-2"></i>@ViewData["Title"]</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="PolicyId" class="form-label fw-semibold"></label>
                        <select asp-for="PolicyId" class="form-select rounded-pill" asp-items="Model.AvailablePolicies">
                            <option value="">-- Select Policy --</option>
                        </select>
                        <span asp-validation-for="PolicyId" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ClaimDate" class="form-label fw-semibold"></label>
                        <input asp-for="ClaimDate" type="date" class="form-control rounded-pill" />
                        <span asp-validation-for="ClaimDate" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ClaimAmount" class="form-label fw-semibold"></label>
                        <div class="input-group"><span class="input-group-text rounded-start-pill">(₹)</span><input asp-for="ClaimAmount" type="number" step="0.01" class="form-control rounded-end-pill" /></div>
                        <span asp-validation-for="ClaimAmount" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="Description" class="form-control rounded-3" rows="4" placeholder="Describe the incident, damages, and any other relevant details..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    <hr />
                    <h5 class="mb-3">Upload Proofs</h5>
                    <div class="mb-3">
                        <label asp-for="PhotoProof" class="form-label fw-semibold"></label>
                        <input asp-for="PhotoProof" type="file" class="form-control rounded-pill" accept="image/jpeg,image/png,image/gif" />
                        <span asp-validation-for="PhotoProof" class="text-danger small"></span>
                        <div class="form-text">Accepted formats: JPG, PNG, GIF. Max 5MB (example limit).</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="VideoProof" class="form-label fw-semibold"></label>
                        <input asp-for="VideoProof" type="file" class="form-control rounded-pill" accept="video/mp4,video/quicktime,video/x-msvideo,video/x-matroska" />
                        <span asp-validation-for="VideoProof" class="text-danger small"></span>
                        <div class="form-text">Accepted formats: MP4, MOV, AVI, MKV. Max 50MB (example limit).</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="submit" class="btn @(User.IsInRole("Admin") ? "btn-primary" : "btn-success") rounded-pill px-4"><i class="bi bi-send-fill me-2"></i>Submit Claim</button>
                        @if (User.IsInRole("Customer"))
                        {
                            <a asp-controller="Claims" asp-action="MyClaims" class="btn btn-outline-secondary rounded-pill px-4"><i class="bi bi-arrow-left-circle-fill me-2"></i>Back to My Claims</a>
                        }
                        else
                        {
                            <a asp-controller="Claims" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4"><i class="bi bi-arrow-left-circle-fill me-2"></i>Back to Claims List</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
