@model AutoInsuranceManagementSystem.ViewModels.SupportTicketCreateViewModel
@{
    ViewData["Title"] = "Create a New Support Ticket";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient-success text-white text-center p-4 rounded-top-4">
                    <h2 class="mb-0 fw-light"><i class="bi bi-headset me-2"></i>@ViewData["Title"]</h2>
                    <p class="mb-0 text-white-50">We are here to help. Please fill out the form below.</p>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 rounded-3" role="alert"></div>

                        <div class="mb-4 form-floating">
                            <input asp-for="Subject" class="form-control rounded-3" placeholder="Enter a brief subject" />
                            <label asp-for="Subject" class="form-label"><i class="bi bi-card-text me-2"></i>Subject</label>
                            <span asp-validation-for="Subject" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-4 form-floating">
                            <textarea asp-for="IssueDescription" class="form-control rounded-3" placeholder="Please describe your issue in detail..." style="height: 150px"></textarea>
                            <label asp-for="IssueDescription" class="form-label"><i class="bi bi-body-text me-2"></i>Issue Description</label>
                            <span asp-validation-for="IssueDescription" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-4 form-floating">
                            <select asp-for="RelatedPolicyId" asp-items="Model.AvailablePolicies" class="form-select rounded-3">
                                <option value="">Select a Related Policy</option>
                            </select>
                            <label asp-for="RelatedPolicyId" class="form-label"><i class="bi bi-file-earmark-text me-2"></i>Related Policy</label>
                            <span asp-validation-for="RelatedPolicyId" class="text-danger small mt-1"></span>
                        </div>

                        <div class="d-grid gap-3 d-md-flex justify-content-md-end mt-4 pt-3 border-top">
                            <a asp-action="MyTickets" class="btn btn-outline-secondary rounded-pill px-4 py-2">
                                <i class="bi bi-arrow-left-circle me-2"></i>Back to My Tickets
                            </a>
                            <button type="submit" class="btn btn-success rounded-pill px-4 py-2">
                                <i class="bi bi-send-fill me-2"></i>Submit Ticket
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-success {
        background: linear-gradient(45deg, #28a745, #218838);
    }
</style>