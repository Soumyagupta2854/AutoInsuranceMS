@model AutoInsuranceManagementSystem.Models.Policy
@{
    ViewData["Title"] = "Edit Customer Policy";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        <div class="card shadow-sm rounded-3">
            <div class="card-header bg-primary text-white rounded-top-3">
                <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]: @Model.PolicyNumber</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="EditInstantiatedPolicy">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>
                    <input type="hidden" asp-for="PolicyId" />
                    <input type="hidden" asp-for="PolicyOfferingId" />
                    <input type="hidden" asp-for="CustomerId" />
                    <input type="hidden" asp-for="PolicyNumber" />


                    <div class="mb-3">
                        <label class="form-label fw-semibold">Policy Number</label>
                        <input type="text" class="form-control rounded-pill" value="@Model.PolicyNumber" readonly disabled />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Customer</label>
                        <input type="text" class="form-control rounded-pill" value="@(Model.Customer?.UserName ?? "N/A")" readonly disabled />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Based on Offering</label>
                        <input type="text" class="form-control rounded-pill" value="@(Model.PolicyOffering?.OfferingName ?? "N/A")" readonly disabled />
                    </div>

                    <div class="mb-3">
                        <label asp-for="VehicleDetails" class="form-label fw-semibold"></label>
                        <textarea asp-for="VehicleDetails" class="form-control rounded-3" rows="3"></textarea>
                        <span asp-validation-for="VehicleDetails" class="text-danger small"></span>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="ActualCoverageAmount" class="form-label fw-semibold"></label>
                            <div class="input-group"><span class="input-group-text rounded-start-pill">(₹)</span><input asp-for="ActualCoverageAmount" type="number" step="0.01" class="form-control rounded-end-pill" /></div>
                            <span asp-validation-for="ActualCoverageAmount" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ActualPremiumAmount" class="form-label fw-semibold"></label>
                            <div class="input-group"><span class="input-group-text rounded-start-pill">(₹)</span><input asp-for="ActualPremiumAmount" type="number" step="0.01" class="form-control rounded-end-pill" /></div>
                            <span asp-validation-for="ActualPremiumAmount" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label fw-semibold"></label>
                            <input asp-for="StartDate" type="date" class="form-control rounded-pill" />
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EndDate" class="form-label fw-semibold"></label>
                            <input asp-for="EndDate" type="date" class="form-control rounded-pill" />
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PolicyStatus" class="form-label fw-semibold"></label>
                        <select asp-for="PolicyStatus" asp-items="Html.GetEnumSelectList<PolicyStatus>()" class="form-select rounded-pill"></select>
                        <span asp-validation-for="PolicyStatus" class="text-danger small"></span>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="submit" class="btn btn-success rounded-pill px-4"><i class="bi bi-save-fill me-2"></i>Save Changes</button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4"><i class="bi bi-arrow-left-circle-fill me-2"></i>Back to Policies List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
