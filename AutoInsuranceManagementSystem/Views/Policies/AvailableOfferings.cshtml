@model IEnumerable<AutoInsuranceManagementSystem.Models.PolicyOffering>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Available Policy Offerings";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show rounded-3" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show rounded-3" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info rounded-3">Currently, there are no policy offerings available. Please check back later.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var offering in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm rounded-3">
                    <div class="card-header bg-primary text-white rounded-top-3">
                        <h5 class="card-title mb-0">@offering.OfferingName</h5>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text">@offering.Description</p>
                        <ul class="list-unstyled mt-auto">
                            <li><strong>Coverage Type:</strong> @offering.CoverageType</li>
                            <li><strong>Coverage Amount:</strong> @offering.CoverageAmount.ToString("C")</li>
                            <li><strong>Premium:</strong> @offering.PremiumAmount.ToString("C")</li>
                            <li><strong>Duration:</strong> @offering.DurationInMonths months</li>
                        </ul>
                    </div>
                    <div class="card-footer bg-light text-center rounded-bottom-3">
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Customer"))
                        {
                            <a asp-controller="Policies" asp-action="PurchaseConfirmation" asp-route-offeringId="@offering.PolicyOfferingId" class="btn btn-success rounded-pill px-4 w-100"><i class="bi bi-cart-plus-fill me-2"></i>Get This Policy</a>
                        }
                        else if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Agent")))
                        {
                            <a asp-controller="PolicyOfferings" asp-action="Details" asp-route-id="@offering.PolicyOfferingId" class="btn btn-outline-info rounded-pill px-4 w-100"><i class="bi bi-eye-fill me-2"></i>View Offering Details</a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("AvailableOfferings", "Policies")" class="btn btn-outline-primary rounded-pill px-4 w-100"><i class="bi bi-box-arrow-in-right me-2"></i>Login to Purchase</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}